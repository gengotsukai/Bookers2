<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    
    <%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
 
  <h4>Title</h4>
  <%= f.text_field :title %>
 
  <h4>Opinion</h4>
  <%= f.text_area :body %>
 
  <%= f.submit 'Update Book' %>

  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>
 
<% end %>