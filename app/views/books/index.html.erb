
<%= render 'shared/userinfonewbook', user: @user, book: @book %>

<h1>Books</h1>
  <table>
    <thead>
     <tr>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
    </thead>

    <tbody>
     <% @books.each do |book| %>
      <tr>
       <td><%= attachment_image_tag book.user, :profile_image %></td>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
   	  </tr>
     <% end %>
    </tbody>

  </table>