<%= render 'shared/userinfonewbook', user: @user, book: @book %>

<h1>Book detail</h1>
  <table>
    <thead>
     <tr>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
    </thead>

    <tbody>
     <% @books.each do |book| %>
      <tr>
       <%= attachment_image_tag book.user, :profile_image %>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to "Edit", edit_book_path(book.id) %></td>
       <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
     <% end %>
    </tbody>

  </table>