<% if flash[:notice] %>
  <div class="alert1" role="alert">
    <%= notice %>
  </div>
 <% end %>

<div class="container"> <!-- ここを追加 -->
  <div class="row">   <!-- ここを追加 -->
   <div class="col-xs-3" style="background-color: white;"> 
      <%= render 'shared/userinfonewbook', user: @user, book: @book %>
   </div>

<div class="col-xs-9">  <!-- ここを追加 -->
 <h1>Book detail</h1>
  <table class="table table-striped">
    <tbody>
      <tr>
       <td>
       <%= attachment_image_tag @mybook.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
       <br>
       <%= link_to @mybook.user.name, user_path(@mybook.user_id) %>
       </td>
       <td><%= @mybook.title %></td>
       <td><%= @mybook.body %></td>
       <% if @user == current_user %>
       <td><%= link_to "Edit", edit_book_path(@mybook.id) %></td>
       <td><%= link_to "Destroy", book_path(@mybook.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
       <% end %>
     </tr>
    </tbody>

  </table>
</div>
</div>
</div>
