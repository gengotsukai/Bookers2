<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <span class="bookers2">Bookers2</span>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to "Home", user_path(current_user.id), class: "glyphicon glyphicon-home" %>
          </li>
          <li>
            <%= link_to 'Users', users_path, class: "glyphicon glyphicon-user" %>
          </li>
          <li>
            <%= link_to 'Books', books_path, class: "glyphicon glyphicon-book" %>
          </li>
          <li>
            <%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
          </li>
        <% else %>
          <li>
            <%= link_to "Home", root_path, class: "glyphicon glyphicon-home" %>
          </li>
          <li>
            <%= link_to "About", about_path, class: "glyphicon glyphicon-link about" %>
          </li>
          <li>
            <%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up"%>
          </li>
          <li>
            <%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in" %>
          </li>
        <% end %>

    </ul>
  </div>
</nav>
<br>
<br>
<br>
    <%= yield %>
  </body>

<div class="container"> <!-- ここを追加 -->
  <div class="row">   <!-- ここを追加 -->
   <div class="col-lg-9" style="background-color: white;"> 
   </div>
<div class="col-lg-3">
  <footer>CopyRight Infratop.inc</footer>
</div>
</div>
</div>

</html>