<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
<h3>name</h3>
<p><%= user.name %></p>
<h3>introduction</h3>
<p><%= user.introduction %></p>
<%= link_to "", edit_user_path(user.id), class: "glyphicon glyphicon-wrench" %>


<%= form_for :book,:url => {controller: "books", action: "create"} do |f| %>
 <h3>New book</h3>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>