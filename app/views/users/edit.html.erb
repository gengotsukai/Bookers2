<div class="container"> <!-- ここを追加 -->
  <div class="row">   <!-- ここを追加 -->
   <div class="col-lg-3" style="background-color: white;"> 
   </div>
<h2>User info</h2>
<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    
    <%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- form_for部分 -->
<%= form_for(@user) do |f| %>
 
  <h4>Name</h4>
  <%= f.text_field :name %>

  <h4>Image</h4>
  <%= f.attachment_field :profile_image %>
 
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
 
  <%= f.submit 'Update User' %>
 
<% end %>
</div>
</div>