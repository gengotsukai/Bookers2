<div class="container"> <!-- ここを追加 -->
  <div class="row">   <!-- ここを追加 -->
   <div class="col-lg-3" style="background-color: white;"> 
      <%= render 'shared/userinfonewbook', user: @user, book: @book %>
   </div>

<div class="col-lg-8">  <!-- ここを追加 -->
 <h1>Users</h1>
  <table class="table table-striped">
    <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
     </tr>
    </thead>

    <tbody>
     <% @users.each do |user| %>
      <tr>
       <td><%= attachment_image_tag user, :profile_image %></td>
       <td><%= user.name %></td>
       <td><%= link_to "Show", user_path(user.id) %></td>
   	  </tr>
     <% end %>
    </tbody>

  </table>
</div>
</div>
</div>