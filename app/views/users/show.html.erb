<% if flash[:notice] %>
  <div class="alert1" role="alert">
    <%= notice %>
  </div>
 <% end %>

<div class="container"> <!-- ここを追加 -->
  <div class="row">   <!-- ここを追加 -->
   <div class="col-xs-3" style="background-color: white;"> 
      <%= render 'shared/userinfonewbook', user: @user, book: @book %>
   </div>

<div class="col-xs-9">  <!-- ここを追加 -->
 <h1>Books</h1>
  <table class="table table-striped">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
    </thead>

    <tbody>
     <% @books.each do |book| %>
      <tr>
       <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %></td>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
     </tr>
     <% end %>
    </tbody>

  </table>
</div>
</div>
</div>

