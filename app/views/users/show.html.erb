<% if flash[:notice] %>
  <div class="alert1" role="alert">
    <%= notice %>
  </div>
 <% end %>

<%= render 'shared/userinfonewbook', user: @user, book: @book %>

<h1>Books</h1>
  <table>
    <thead>
     <tr>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
    </thead>

    <tbody>
     <% @books.each do |book| %>
      <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
     </tr>
     <% end %>
    </tbody>

  </table>

